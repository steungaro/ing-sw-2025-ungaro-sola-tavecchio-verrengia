<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="it.polimi.ingsw.gc20.client.view.GUI.controllers.BuildingPhaseController"
            prefHeight="600.0" prefWidth="800.0"
            style="-fx-background-color: #222233;">

    <top>
        <HBox alignment="CENTER" spacing="20">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <Label text="Bulding phase" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="24.0" />
                </font>
            </Label>
        </HBox>
    </top>

    <center>
        <BorderPane fx:id="shipContainer" styleClass="ship-container"
                    style="-fx-background-color: #333344; -fx-background-radius: 10; -fx-padding: 10;"/>
    </center>

    <right>
        <VBox spacing="15" alignment="CENTER" prefWidth="200">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <VBox alignment="CENTER" spacing="5" style="-fx-background-color: #333344; -fx-background-radius: 10; -fx-padding: 10;">
                <Label text="Component in hand" textFill="WHITE">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <Pane fx:id="componentInHandPane" prefHeight="100" prefWidth="150" styleClass="component" />
            </VBox>

            <VBox alignment="CENTER" spacing="5" style="-fx-background-color: #333344; -fx-background-radius: 10; -fx-padding: 10;">
                <Label text="Covered deck" textFill="WHITE">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <Pane fx:id="coveredDeckPane" prefHeight="100" prefWidth="150" styleClass="covered-deck"/>
            </VBox>
        </VBox>
    </right>

    <bottom>
        <VBox spacing="10" alignment="CENTER" style="-fx-background-color: #333344; -fx-background-radius: 10; -fx-margin: 10;">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="Uncovered components" textFill="WHITE">
                <font>
                    <Font size="16.0" />
                </font>
            </Label>
            <ScrollPane prefHeight="120" prefWidth="700">
                <FlowPane fx:id="uncoveredComponentsPane" hgap="10" vgap="10" prefWidth="680"
                          style="-fx-background-color: #444455;"/>
            </ScrollPane>

            <!-- Pulsanti per navi non-learner - da rendere visibili condizionalmente -->
            <HBox fx:id="nonLearnerButtonsContainer" alignment="CENTER" spacing="20" visible="false" managed="false">
                <Button text="Take booked component" onAction="#takeBookedComponent"
                        prefHeight="40" prefWidth="180"
                        style="-fx-background-color: #5cb85c; -fx-text-fill: white;">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
                <Button text="Turn hourglass" onAction="#turnHourglass"
                        prefHeight="40" prefWidth="150"
                        style="-fx-background-color: #5bc0de; -fx-text-fill: white;">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
                <Button text="Peek deck" onAction="#peekDeck"
                        prefHeight="40" prefWidth="150"
                        style="-fx-background-color: #f0ad4e; -fx-text-fill: white;">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
            </HBox>

            <!-- Pulsanti per navi non-learner quando c'Ã¨ un componente in mano -->
            <HBox fx:id="nonLearnerComponentInHandButtons" alignment="CENTER" spacing="20" visible="false" managed="false">
                <Button text="Book component" onAction="#bookComponent"
                        prefHeight="40" prefWidth="180"
                        style="-fx-background-color: #5cb85c; -fx-text-fill: white;">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
                <Button text="Turn hourglass" onAction="#turnHourglass"
                        prefHeight="40" prefWidth="150"
                        style="-fx-background-color: #5bc0de; -fx-text-fill: white;">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
            </HBox>
        </VBox>
    </bottom>
</BorderPane>