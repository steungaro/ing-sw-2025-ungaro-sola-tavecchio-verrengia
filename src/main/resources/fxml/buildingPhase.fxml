<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #222233;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polimi.ingsw.gc20.client.view.GUI.controllers.BuildingPhaseController">

    <top>
        <HBox alignment="CENTER" spacing="20">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>
            <Label text="Bulding phase" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="24.0" />
                </font>
            </Label>
        </HBox>
    </top>

    <center>
        <BorderPane fx:id="shipContainer" prefWidth="528.0" style="-fx-background-color: #333344; -fx-background-radius: 10; -fx-padding: 10;" styleClass="ship-container" />
    </center>

    <right>
        <VBox alignment="CENTER" prefWidth="200" spacing="15">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>

            <VBox alignment="CENTER" spacing="5" style="-fx-background-color: #333344; -fx-background-radius: 10; -fx-padding: 10;">
                <Label text="Component in hand" textFill="WHITE">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <Pane fx:id="componentInHandPane" prefHeight="100" prefWidth="150" styleClass="component" />
            </VBox>

            <VBox alignment="CENTER" spacing="5" style="-fx-background-color: #333344; -fx-background-radius: 10; -fx-padding: 10;">
                <Label text="Covered deck" textFill="WHITE">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <Pane fx:id="coveredDeckPane" prefHeight="100" prefWidth="150" styleClass="covered-deck" />
            </VBox>
        </VBox>
    </right>

    <bottom>
        <VBox alignment="CENTER" spacing="10" style="-fx-background-color: #333344; -fx-background-radius: 10; -fx-margin: 10;">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
            <Label text="Uncovered components" textFill="WHITE">
                <font>
                    <Font size="16.0" />
                </font>
            </Label>
            <ScrollPane prefHeight="120" prefWidth="700">
                <FlowPane fx:id="uncoveredComponentsPane" hgap="10" prefWidth="680" style="-fx-background-color: #444455;" vgap="10" />
            </ScrollPane>

            <HBox fx:id="nonLearnerButtonsContainer" alignment="CENTER" managed="false" spacing="20" visible="false">
                <Button onAction="#takeBookedComponent" prefHeight="40" prefWidth="180" style="-fx-background-color: #5cb85c; -fx-text-fill: white;" text="Take booked component">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
                <Button onAction="#turnHourglass" prefHeight="40" prefWidth="150" style="-fx-background-color: #5bc0de; -fx-text-fill: white;" text="Turn hourglass">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
                <Button onAction="#peekDeck" prefHeight="40" prefWidth="150" style="-fx-background-color: #f0ad4e; -fx-text-fill: white;" text="Peek deck">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
            </HBox>

            <HBox fx:id="nonLearnerComponentInHandButtons" alignment="CENTER" managed="false" spacing="20" visible="false">
                <Button onAction="#bookComponent" prefHeight="40" prefWidth="180" style="-fx-background-color: #5cb85c; -fx-text-fill: white;" text="Book component">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
                <Button onAction="#turnHourglass" prefHeight="40" prefWidth="150" style="-fx-background-color: #5bc0de; -fx-text-fill: white;" text="Turn hourglass">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
            </HBox>
        </VBox>
    </bottom>
</BorderPane>
