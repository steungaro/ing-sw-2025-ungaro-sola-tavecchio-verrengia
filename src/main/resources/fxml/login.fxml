<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="it.polimi.ingsw.gc20.client.view.GUI.controllers.LoginController"
      alignment="CENTER" spacing="20" style="-fx-padding: 20;">
    
    <Label text="Game Client" style="-fx-font-size: 24;"/>
    
    <HBox alignment="CENTER" spacing="10">
        <Label text="Username:"/>
        <TextField fx:id="usernameField" prefWidth="200"/>
    </HBox>
    
    <HBox alignment="CENTER" spacing="10">
        <Label text="Server Address:"/>
        <TextField fx:id="serverField" text="localhost" prefWidth="200"/>
    </HBox>
    
    <HBox alignment="CENTER" spacing="10">
        <Label text="Port:"/>
        <TextField fx:id="portField" text="1099" prefWidth="100"/>
    </HBox>
    
    <Button fx:id="loginButton" text="Login" defaultButton="true"/>
    
    <Label fx:id="statusLabel" text="" style="-fx-text-fill: red;"/>
</VBox>