<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="600.0" prefWidth="800.0" spacing="20" style="-fx-background-color: #222233;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polimi.ingsw.gc20.client.view.GUI.controllers.BranchMenuController">

    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <Label text="Your ship has split into two branches" textFill="WHITE">
        <font>
            <Font name="System Bold" size="24.0" />
        </font>
    </Label>

    <Label text="Select the branch you want to keep" textFill="WHITE">
        <font>
            <Font size="16.0" />
        </font>
    </Label>

    <Label fx:id="errorLabel" contentDisplay="CENTER" textAlignment="CENTER" textFill="RED" visible="false">
        <font>
            <Font size="14.0" />
        </font>
    </Label>

    <VBox alignment="CENTER" prefHeight="400.0" prefWidth="760.0" spacing="10" style="-fx-background-color: #333344; -fx-padding: 20; -fx-background-radius: 10;">
      <Pane prefHeight="200.0" prefWidth="200.0" />
    </VBox>

    <Button fx:id="confirmButton" disable="true" onAction="#onConfirmSelection" prefHeight="50" prefWidth="200" text="Confirm Selection">
        <font>
            <Font size="18.0" />
        </font>
        <style>
            -fx-background-color: #4a7eb3;
            -fx-text-fill: white;
        </style>
    </Button>
</VBox>
