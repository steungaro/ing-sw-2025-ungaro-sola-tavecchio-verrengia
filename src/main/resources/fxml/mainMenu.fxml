<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="30" style="-fx-background-color: #222233;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polimi.ingsw.gc20.client.view.GUI.controllers.MainMenuController">

    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <Label text="GALAXY TRUCKER" textFill="WHITE">
        <font>
            <Font name="System Bold" size="32.0" />
        </font>
    </Label>

    <Label fx:id="welcomeLabel" text="Benvenuto" textFill="#bbbbff">
        <font>
            <Font size="18.0" />
        </font>
    </Label>

        <Button fx:id="createLobbyButton" prefHeight="50" prefWidth="240" text="CREA NUOVA LOBBY">
         <font>
             <Font size="16.0" />
         </font>
         <style>
                -fx-background-color: #5a6e93;
                -fx-text-fill: white;
            </style>
     </Button>

    <Label text="LOBBY DISPONIBILI" textFill="WHITE">
        <font>
            <Font name="System Bold" size="24.0" />
        </font>
    </Label>

    <ListView fx:id="lobbiesListView" prefHeight="250" prefWidth="500" VBox.vgrow="ALWAYS">
        <style>
            -fx-background-color: #4a5363;
            -fx-control-inner-background: #333344;
            -fx-text-fill: white;
        </style>
    </ListView>

    <HBox alignment="CENTER" spacing="20">
        <Button fx:id="joinLobbyButton" disable="true" prefHeight="40" prefWidth="200" text="ENTRA NELLA LOBBY">
            <font>
                <Font size="14.0" />
            </font>
            <style>
                -fx-background-color: #4a7eb3;
                -fx-text-fill: white;
            </style>
        </Button>

        <Button fx:id="refreshButton" prefHeight="40" prefWidth="150" text="AGGIORNA">
            <font>
                <Font size="14.0" />
            </font>
            <style>
                -fx-background-color: #5a6e93;
                -fx-text-fill: white;
            </style>
        </Button>
    </HBox>

    <Button fx:id="logoutButton" prefWidth="150" text="DISCONNETTI">
        <font>
            <Font size="14.0" />
        </font>
        <style>
            -fx-background-color: #663333;
            -fx-text-fill: white;
        </style>
    </Button>
</VBox>
