<?import javafx.scene.text.*?>
<?import javafx.scene.effect.*?>

<VBox alignment="CENTER" prefHeight="600.0" prefWidth="700.0" spacing="30"
      style="-fx-background-color: #222233;"
      xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="it.polimi.ingsw.gc20.client.view.GUI.controllers.IdleMenuController">

    <padding>
        <Insets bottom="40" left="40" right="40" top="40" />
    </padding>

    <!-- Title container with shadow effect -->
    <VBox alignment="CENTER" spacing="15">
        <Label text=" GAME Stopped " textFill="#ecf0f1" alignment="CENTER">
            <font>
                <Font name="System Bold" size="28.0" />
            </font>
        </Label>

        <!-- Decorative bar -->
        <Separator prefWidth="250" style="-fx-background: linear-gradient(to right, transparent, #3498db, transparent); -fx-pref-height: 3;" />
    </VBox>

    <!-- Message container with elegant border -->
    <VBox alignment="CENTER" spacing="15"
          style="-fx-background-color: #333344;
                 -fx-background-radius: 10;
                 -fx-border-color: #34495e;
                 -fx-border-radius: 10;
                 -fx-border-width: 2;">
        <padding>
            <Insets bottom="25" left="30" right="30" top="25" />
        </padding>

        <Label fx:id="messageLabel" textFill="#ecf0f1" wrapText="true" textAlignment="CENTER"
               maxWidth="500">
            <font>
                <Font name="System" size="16.0" />
            </font>
        </Label>
    </VBox>

    <!-- Animated waiting indicator -->
    <VBox alignment="CENTER" spacing="15">
        <Label text="Please wait..." textFill="#95a5a6" opacity="0.9">
            <font>
                <Font name="System Italic" size="14.0" />
            </font>
        </Label>

        <!-- Animated dots for loading -->
